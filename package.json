{
  "name": "npm-builder",
  "version": "0.1.0",
  "description": "builder for web projects",
  "main": "index.js",
  "scripts": {
    "build:html": "pug assets -o dist",
    "build:css": "node-sass assets/css/main.scss -o dist/css/ --output-style compressed && node-sass assets/css/bootstrap -o dist/css/bootstrap --output-style compressed",
    "build:js": "mkdirp dist/js && browserify assets/js/main.js -t [envify --NODE_ENV production ] -t babelify > dist/js/script.js",
    "build:img": "mkdirp dist/img && ncp assets/img/ dist/img",
    "build:font": "mkdirp dist/fonts && ncp assets/fonts/ dist/fonts",
    "prebuild": "rimraf dist/*",
    "build": "mkdirp dist && npm-run-all -p build:*",
    "watch:html": "pug assets -o dev -w -P",
    "watch:css": "node-sass assets/css --include-path node_modules/ -o dev/css --source-map true && node-sass assets/css -o dev/css -wr --source-map true",
    "watch:js": "mkdirp dev/js && watchify --debug assets/js/main.js -t [ envify --NODE_ENV development ] -t babelify -o dev/js/script.js",
    "watch:img": "mkdirp dev/img && ncp assets/img/ dev/img",
    "watch:font": "mkdirp dev/fonts && ncp assets/fonts/ dev/fonts",
    "predev": "rimraf dev/*",
    "dev": "mkdirp dev && npm-run-all -p server watch:*",
    "server": "browser-sync start --server dev/ --files dev/",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "Aleksandr Gusev",
  "license": "ISC",
  "dependencies": {
    "@babel/core": "^7.9.6",
    "@babel/preset-env": "^7.9.6",
    "@babel/preset-react": "^7.9.4",
    "babelify": "^10.0.0",
    "browser-sync": "^2.26.7",
    "browserify": "^16.5.0",
    "envify": "^4.1.0",
    "mkdirp": "^1.0.3",
    "ncp": "^2.0.0",
    "node-sass": "^7.0.0",
    "npm-run-all": "^4.1.5",
    "pug": "^2.0.4",
    "pug-cli": "^1.0.0-alpha6",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-rangeslider": "^2.2.0",
    "react-redux": "^7.2.0",
    "redux": "^4.0.5",
    "rimraf": "^3.0.2",
    "watchify": "^3.11.1"
  }
}
